<div class="step">
    @if (Number != 0)
    {
        <span class="step-line"></span>
    }
    <Vertical>
        <StepIcon Active=@Active Completed=@Completed Number=@Number />
        <span class=@labelStyle>@Title</span>
    </Vertical>
</div>

@code {
    private string labelStyle { get { return (Active || Completed) ? "step-label-text-active" : "step-label-text-inactive"; } }

    [Parameter]
    public bool Active { get; set; } = false;

    [Parameter]
    public bool Completed { get; set; } = false;

    [Parameter]
    public int Number { get; set; }

    [Parameter]
    public string Title { get; set; }

}