<div class="framed" style=@($"margin-right: 10px; align-items: center; width: auto; flex-direction: row; height: 36px; color: {getColor()};")>
    <MatBody1>@Option.Content</MatBody1>
    <MatIconButton OnClick=@Delete Icon="delete"></MatIconButton>
</div>

@code {

    [Parameter]
    public Option Option { get; set; }

    [Parameter]
    public EventCallback<string> OnDelete { get; set; }

    private string getColor()
    {
        if (Option.IsCorrect)
            return "#5cb85c";
        return "black";
    }

    private async Task Delete()
    {
        await OnDelete.InvokeAsync(Option.Content);
    }
}
